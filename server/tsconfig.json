{
  "compilerOptions": {
    "lib": ["es2023"],
    "types": ["node"],
    "target": "es2020",
    "module": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "../dist/server",
    "strictNullChecks": true
  },
  "exclude": ["*.config.mjs"]
}
