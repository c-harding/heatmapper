{
  "name": "heatmapper-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "ts-node app.ts",
    "lint": "eslint --fix '*.ts'",
    "clear-built": "[[ -d ../dist/server ]] && rm -r ../dist/server; [[ -d ../dist/shared ]] && rm -r ../dist/shared; true",
    "build": "yarn clear-built; tsc --build && cp -r package.json static ../dist/server/ && mkdir -p ../dist/sessions"
  },
  "dependencies": {
    "@types/proper-lockfile": "^4.1.1",
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "find-free-port": "^2.0.0",
    "moment": "^2.26.0",
    "node-fetch": "^2.6.1",
    "proper-lockfile": "^4.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/express-ws": "^3.0.0",
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-eslint": "^10.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "@typescript-eslint/eslint-plugin"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-return-await": "off",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
}
