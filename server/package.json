{
  "name": "@strava-heatmapper/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "ts-node app.ts",
    "lint": "eslint --fix '*.ts'",
    "clear-built": "[[ -d ../dist/server ]] && rm -r ../dist/server; true",
    "copy-for-deployment": "cp -r package.json static ../dist/server/",
    "build": "yarn clear-built; tsc --build && yarn copy-for-deployment"
  },
  "dependencies": {
    "@strava-heatmapper/shared": "^0.1.0",
    "@types/proper-lockfile": "^4.1.1",
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.3",
    "express-ws": "^5.0.2",
    "node-fetch": "^2.6.7",
    "proper-lockfile": "^4.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/express-ws": "^3.0.1",
    "@types/node": "^20.10.4",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2"
  },
  "prettier": {
    "printWidth": 120,
