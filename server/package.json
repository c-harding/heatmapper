{
  "name": "heatmapper-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "ts-node app.ts",
    "lint": "eslint --fix '*.ts'",
    "clear-built": "[[ -d ../dist/server ]] && rm -r ../dist/server; [[ -d ../dist/shared ]] && rm -r ../dist/shared; true",
    "copy-for-deployment": "cp -r package.json static ../dist/server/ && cp ../shared/package.json ../dist/shared/ && mkdir -p ../dist/sessions",
    "build": "yarn clear-built; tsc --build && yarn copy-for-deployment"
  },
  "dependencies": {
    "@types/proper-lockfile": "^4.1.1",
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "proper-lockfile": "^4.1.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-ws": "^3.0.0",
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
