{
  "name": "@strava-heatmapper/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "nodemon app.ts",
    "lint": "eslint --fix . --ext .ts",
    "prettier": "prettier -w .",
    "clear-built": "[[ -d ../dist/server ]] && rm -r ../dist/server; true",
    "copy-for-deployment": "cp -r package.json static ../dist/server/",
    "build": "yarn clear-built; tsc --build && yarn copy-for-deployment"
  },
  "dependencies": {
    "@strava-heatmapper/shared": "^0.1.0",
    "@types/proper-lockfile": "^4.1.4",
    "body-parser": "^1.20.3",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "node-fetch": "^2.7.0",
    "proper-lockfile": "^4.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.5",
    "@types/node": "^20.17.7",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "prettier": {
    "printWidth": 120,
