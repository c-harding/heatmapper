{
  "name": "heatmapper-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "ts-node index.ts",
    "build": "tsc"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "find-free-port": "^2.0.0",
    "moment": "^2.26.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/express-ws": "^3.0.0",
    "@types/node": "^14.0.13",
    "babel-eslint": "^10.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
}
