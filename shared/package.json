{
  "name": "@strava-heatmapper/shared",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "prettier": "prettier -w .",
    "clear-built": "rm -rf ../dist/shared; true",
    "copy-for-deployment": "cp package.json ../dist/shared/",
    "build": "yarn clear-built; tsc --build && yarn copy-for-deployment"
  },
  "devDependencies": {
    "@types/node": "^20.17.7",
    "eslint": "^9.15.0",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "prettier": {
    "printWidth": 100,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
