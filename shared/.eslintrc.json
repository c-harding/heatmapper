{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint/eslint-plugin"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-unused-vars": "off",
    "no-inner-declarations": "off",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-inferrable-types": "off"
  }
}
